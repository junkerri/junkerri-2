---
interface Props {
	date?: Date | string | number;
}

const { date } = Astro.props;
const parsedDate = date ? new Date(date) : null;
---


<time datetime={parsedDate ? parsedDate.toISOString() : undefined}>
	{
		parsedDate
			? parsedDate.toLocaleDateString('en-us', {
			year: 'numeric',
			month: 'short',
			day: 'numeric',
			})
			: 'â€”'
	}
</time>
