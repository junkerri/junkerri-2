  />

  <!-- Hero Section -->
  <section class="relative overflow-hidden bg-gradient-to-br from-primary/10 via-background to-secondary/10 py-20">
    <div class="container mx-auto px-4 text-center">
      <Badge variant="secondary" class="mb-4">Premium Template</Badge>
      <h1 class="text-4xl md:text-6xl font-bold text-foreground mb-6">
        Build Your Dream Website
