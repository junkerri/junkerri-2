---

<BaseLayout title="Music - Junkerri" description="Experimental electronic music and ambient soundscapes">
  <Header />
  
  <main class="bg-gradient-to-br from-background via-background to-muted/20">
    <!-- Hero Section -->
    <section class="py-20 relative overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-br from-primary/5 to-secondary/5"></div>
      <div class="container relative z-10">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-5xl md:text-7xl font-bold tracking-tight mb-8 bg-gradient-to-r from-foreground to-muted-foreground bg-clip-text text-transparent animate-slide-in-top">
            Music
          </h1>
          <p class="text-xl text-muted-foreground max-w-2xl mx-auto animate-slide-in-bottom">
            Experimental electronic music exploring digital consciousness and ambient soundscapes.
          </p>
        </div>
      </div>
    </section>

    <!-- Platform Links -->
    <section class="py-12 border-b bg-muted/30">
      <div class="container">
        <div class="flex flex-wrap gap-6 justify-center">
          {platforms.map((platform, index) => (
            <a 
              href={platform.url} 
              target="_blank" 
              rel="noopener noreferrer"
              class="inline-flex items-center gap-3 px-6 py-3 rounded-lg border border-input bg-background text-sm font-medium transition-all duration-300 hover:bg-accent hover:text-accent-foreground hover:scale-105 hover:shadow-lg focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 animate-slide-in-bottom"
              style={`animation-delay: ${index * 0.1}s`}
            >
              <span class={platform.color} set:html={platform.icon}></span>
              {platform.name}
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- Featured Release -->
    <section class="py-20 bg-gradient-to-br from-background to-muted/20">
      <div class="container">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold mb-4 animate-slide-in-top">Latest Release</h2>
          <p class="text-muted-foreground text-lg animate-slide-in-bottom">Listen to the newest music</p>
        </div>

        <div class="max-w-2xl mx-auto">
          <div class="text-center space-y-6 animate-scale-in">
            <div class="card p-8 rounded-2xl">
              <span class="inline-flex items-center rounded-full bg-secondary px-2.5 py-0.5 text-xs font-semibold transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2">
                {releases[0].type} â€¢ {releases[0].year}
              </span>
              <h3 class="text-3xl font-bold mt-2 bg-gradient-to-r from-foreground to-muted-foreground bg-clip-text text-transparent">{releases[0].title}</h3>
              <p class="text-muted-foreground mt-2">{releases[0].description}</p>
            </div>
            
            <div class="space-y-4">
              <div class="hover-lift rounded-xl overflow-hidden shadow-lg">
                <iframe 
                  style="border-radius:12px" 
                  src={releases[0].spotifyUrl} 
                  width="100%" 
                  height="152" 
                  frameborder="0" 
                  allowfullscreen="" 
                  allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" 
                  loading="lazy"
                  onerror="this.style.display='none'; this.nextElementSibling.style.display='block';"
                  onload="this.nextElementSibling.style.display='none';">
                </iframe>
                <div class="flex items-center justify-center h-[152px] bg-muted rounded-xl" style="display: none;">
                  <div class="text-center p-4">
                    <p class="text-muted-foreground mb-2">Spotify player unavailable</p>
                    <a href={releases[0].spotifyUrl.replace('/embed/', '/')} target="_blank" rel="noopener noreferrer" class="btn btn-primary btn-sm">
                      Listen on Spotify
                    </a>
                  </div>
                </div>
              </div>
              
              <div class="hover-lift rounded-xl overflow-hidden shadow-lg">
                <iframe 
                  width="100%" 
                  height="315" 
                  src={releases[0].youtubeUrl} 
                  title="Moon Is Cake - Junkerri" 
                  frameborder="0" 
                  allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" 
                  allowfullscreen>
                </iframe>
              </div>
              
              <div class="flex gap-4 justify-center">
                <a 
                  href={releases[0].bandcampUrl} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="btn btn-primary hover-lift"
                >
                  Buy on Bandcamp
                </a>
                <a 
                  href={releases[0].youtubeUrl.replace('/embed/', '/watch?v=')} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="btn btn-outline hover-lift"
                >
                  Watch on YouTube
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- All Releases -->
    <section class="py-20 bg-muted/30">
      <div class="container">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold mb-4 animate-slide-in-top">All Releases</h2>
          <p class="text-muted-foreground text-lg animate-slide-in-bottom">Explore the complete discography</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {releases.map((release, index) => (
            <div class="group overflow-hidden rounded-lg border bg-card text-card-foreground shadow-sm hover:shadow-lg transition-all duration-300 animate-scale-in hover-lift" style={`animation-delay: ${index * 0.1}s`}>
              <div class="aspect-square overflow-hidden">
                <img 
                  src={release.coverImage} 
                  alt={release.title}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                />
              </div>
              <div class="p-6">
                <div class="flex items-center justify-between mb-2">
                  <span class="inline-flex items-center rounded-full bg-secondary px-2.5 py-0.5 text-xs font-semibold transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2">
                    {release.type}
                  </span>
                  <span class="text-sm text-muted-foreground">{release.year}</span>
                </div>
                <h3 class="text-xl font-semibold leading-none tracking-tight mb-2">{release.title}</h3>
                <p class="text-sm text-muted-foreground mb-4">{release.description}</p>
                
                <div class="space-y-3">
                  {release.spotifyUrl && (
                    <div class="hover-lift rounded-lg overflow-hidden">
                      <iframe 
                        style="border-radius:8px" 
                        src={release.spotifyUrl} 
                        width="100%" 
                        height="80" 
                        frameborder="0" 
                        allowfullscreen="" 
                        allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" 
                        loading="lazy"
                        onerror="this.style.display='none'; this.nextElementSibling.style.display='block';"
                        onload="this.nextElementSibling.style.display='none';">
                      </iframe>
                      <div class="flex items-center justify-center h-[80px] bg-muted rounded-lg" style="display: none;">
                        <div class="text-center p-2">
                          <a href={release.spotifyUrl.replace('/embed/', '/')} target="_blank" rel="noopener noreferrer" class="btn btn-primary btn-xs">
                            Listen
                          </a>
                        </div>
                      </div>
                    </div>
                  )}
                  
                  <div class="flex gap-2">
                    <a 
                      href={release.bandcampUrl} 
                      target="_blank" 
                      rel="noopener noreferrer"
                      class="btn btn-primary btn-sm hover-lift"
                    >
                      Bandcamp
                    </a>
                    <a 
                      href={release.youtubeUrl} 
                      target="_blank" 
                      rel="noopener noreferrer"
                      class="btn btn-outline btn-sm hover-lift"
                    >
                      YouTube
                    </a>
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 bg-primary text-primary-foreground">
      <div class="container text-center">
        <h2 class="text-4xl font-bold mb-4 animate-slide-in-top">Stay Updated</h2>
        <p class="text-xl mb-8 opacity-90 animate-slide-in-bottom">Follow for new releases and behind-the-scenes content</p>
        <div class="flex flex-wrap gap-4 justify-center">
          {platforms.map((platform, index) => (
            <a 
              href={platform.url} 
              target="_blank" 
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 px-6 py-3 rounded-lg bg-secondary text-secondary-foreground text-sm font-medium transition-all duration-300 hover:bg-secondary/90 hover:scale-105 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 animate-slide-in-bottom"
              style={`animation-delay: ${index * 0.1}s`}
            >
              <span class={platform.color} set:html={platform.icon}></span>
              Follow on {platform.name}
            </a>
          ))}
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>
