---

<BaseLayout title="Music - Junkerri" description="Experimental electronic music and ambient soundscapes">
  <Header />
  
  <main>
    <!-- Hero Section -->
    <section class="py-20 bg-gradient-to-br from-background via-background to-muted/20">
      <div class="container">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-5xl md:text-7xl font-bold tracking-tight mb-8 bg-gradient-to-r from-foreground to-muted-foreground bg-clip-text text-transparent">
            Music
          </h1>
          <p class="text-xl text-muted-foreground max-w-2xl mx-auto">
            Experimental electronic music exploring digital consciousness and ambient soundscapes.
          </p>
        </div>
      </div>
    </section>

    <!-- Platform Links -->
    <section class="py-12 border-b">
      <div class="container">
        <div class="flex flex-wrap gap-6 justify-center">
          {platforms.map((platform) => (
            <a 
              href={platform.url} 
              target="_blank" 
              rel="noopener noreferrer"
              class="inline-flex items-center gap-3 px-6 py-3 rounded-lg border border-input bg-background text-sm font-medium transition-colors hover:bg-accent hover:text-accent-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2"
            >
              <span class={platform.color} set:html={platform.icon}></span>
              {platform.name}
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- Featured Release -->
    <section class="py-20">
      <div class="container">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold mb-4">Latest Release</h2>
          <p class="text-muted-foreground text-lg">Listen to the newest music</p>
        </div>

        <div class="max-w-4xl mx-auto">
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center">
            <div class="aspect-square overflow-hidden rounded-2xl bg-gradient-to-br from-primary/20 to-secondary/20">
              <img 
                src={releases[0].coverImage} 
                alt={releases[0].title}
                class="w-full h-full object-cover"
              />
            </div>
            <div class="space-y-6">
              <div>
                <span class="inline-flex items-center rounded-full bg-secondary px-2.5 py-0.5 text-xs font-semibold transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2">
                  {releases[0].type} â€¢ {releases[0].year}
                </span>
                <h3 class="text-3xl font-bold mt-2">{releases[0].title}</h3>
                <p class="text-muted-foreground mt-2">{releases[0].description}</p>
              </div>
              
              <div class="space-y-4">
                <iframe 
                  style="border-radius:12px" 
                  src={releases[0].spotifyUrl} 
                  width="100%" 
                  height="152" 
                  frameborder="0" 
                  allowfullscreen="" 
                  allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" 
                  loading="lazy">
                </iframe>
                
                <div class="flex gap-4">
                  <a 
                    href={releases[0].bandcampUrl} 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="inline-flex items-center justify-center rounded-md bg-primary text-primary-foreground px-4 py-2 text-sm font-medium transition-colors hover:bg-primary/90 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2"
                  >
                    Buy on Bandcamp
                  </a>
                  <a 
                    href={releases[0].youtubeUrl} 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="inline-flex items-center justify-center rounded-md border border-input bg-background px-4 py-2 text-sm font-medium transition-colors hover:bg-accent hover:text-accent-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2"
                  >
                    Watch on YouTube
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- All Releases -->
    <section class="py-20 bg-muted/30">
      <div class="container">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold mb-4">All Releases</h2>
          <p class="text-muted-foreground text-lg">Explore the complete discography</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {releases.map((release) => (
            <div class="group overflow-hidden rounded-lg border bg-card text-card-foreground shadow-sm hover:shadow-lg transition-all duration-300">
              <div class="aspect-square overflow-hidden">
                <img 
                  src={release.coverImage} 
                  alt={release.title}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                />
              </div>
              <div class="p-6">
                <div class="flex items-center justify-between mb-2">
                  <span class="inline-flex items-center rounded-full bg-secondary px-2.5 py-0.5 text-xs font-semibold transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2">
                    {release.type}
                  </span>
                  <span class="text-sm text-muted-foreground">{release.year}</span>
                </div>
                <h3 class="text-xl font-semibold leading-none tracking-tight mb-2">{release.title}</h3>
                <p class="text-sm text-muted-foreground mb-4">{release.description}</p>
                
                <div class="space-y-3">
                  <iframe 
                    style="border-radius:8px" 
                    src={release.spotifyUrl} 
                    width="100%" 
                    height="80" 
                    frameborder="0" 
                    allowfullscreen="" 
                    allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" 
                    loading="lazy">
                  </iframe>
                  
                  <div class="flex gap-2">
                    <a 
                      href={release.bandcampUrl} 
                      target="_blank" 
                      rel="noopener noreferrer"
                      class="inline-flex items-center justify-center rounded-md bg-primary text-primary-foreground px-3 py-1 text-xs font-medium transition-colors hover:bg-primary/90 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2"
                    >
                      Bandcamp
                    </a>
                    <a 
                      href={release.youtubeUrl} 
                      target="_blank" 
                      rel="noopener noreferrer"
                      class="inline-flex items-center justify-center rounded-md border border-input bg-background px-3 py-1 text-xs font-medium transition-colors hover:bg-accent hover:text-accent-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2"
                    >
                      YouTube
                    </a>
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 bg-primary text-primary-foreground">
      <div class="container text-center">
        <h2 class="text-4xl font-bold mb-4">Stay Updated</h2>
        <p class="text-xl mb-8 opacity-90">Follow for new releases and behind-the-scenes content</p>
        <div class="flex flex-wrap gap-4 justify-center">
          {platforms.map((platform) => (
            <a 
              href={platform.url} 
              target="_blank" 
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 px-6 py-3 rounded-lg bg-secondary text-secondary-foreground text-sm font-medium transition-colors hover:bg-secondary/90 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2"
            >
              <span class={platform.color} set:html={platform.icon}></span>
              Follow on {platform.name}
            </a>
          ))}
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>
