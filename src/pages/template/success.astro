---
import BaseLayout from "../../layouts/BaseLayout.astro";
import SEO from "../../components/SEO.astro";
import { Button } from "@/components/ui/button";
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
---

<BaseLayout>
  <SEO 
    title="Template Purchase Successful - Junkerri Astro Template"
    description="Your template purchase was successful! Download your files and get started building amazing websites."
  />

  <div class="container mx-auto px-4 py-20">
    <!-- Success Header -->
    <div class="text-center mb-16">
      <div class="inline-flex items-center justify-center w-20 h-20 bg-green-100 rounded-full mb-6">
        <svg class="w-10 h-10 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
        </svg>
      </div>
      <h1 class="text-4xl md:text-5xl font-bold text-foreground mb-4">
        ðŸŽ‰ Purchase Successful!
      </h1>
      <p class="text-xl text-muted-foreground max-w-2xl mx-auto">
        Thank you for purchasing the Junkerri Astro Template! 
        You're now ready to build amazing websites with modern web technologies.
      </p>
    </div>

    <!-- What's Next Section -->
    <div class="max-w-4xl mx-auto mb-16">
      <h2 class="text-3xl font-bold text-center text-foreground mb-12">
        What's Next?
      </h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <!-- Download Section -->
        <div class="bg-gradient-to-br from-blue-50 to-indigo-50 rounded-lg p-8 border border-blue-200">
          <div class="text-center mb-6">
            <div class="inline-flex items-center justify-center w-16 h-16 bg-blue-100 rounded-full mb-4">
              <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-foreground mb-2">Download Your Template</h3>
            <p class="text-muted-foreground">Get instant access to the complete source code</p>
          </div>
          
          <div class="space-y-4">
            <div class="flex items-center justify-between p-3 bg-white rounded-lg border">
              <span class="font-medium">Source Code (ZIP)</span>
              <Button size="sm" variant="outline">Download</Button>
            </div>
            <div class="flex items-center justify-between p-3 bg-white rounded-lg border">
              <span class="font-medium">Documentation (PDF)</span>
              <Button size="sm" variant="outline">Download</Button>
            </div>
            <div class="flex items-center justify-between p-3 bg-white rounded-lg border">
              <span class="font-medium">License Agreement</span>
              <Button size="sm" variant="outline">Download</Button>
            </div>
          </div>
        </div>

        <!-- Setup Section -->
        <div class="bg-gradient-to-br from-green-50 to-emerald-50 rounded-lg p-8 border border-green-200">
          <div class="text-center mb-6">
            <div class="inline-flex items-center justify-center w-16 h-16 bg-green-100 rounded-full mb-4">
              <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-foreground mb-2">Get Started</h3>
            <p class="text-muted-foreground">Follow our step-by-step setup guide</p>
          </div>
          
          <div class="space-y-4">
            <div class="flex items-center p-3 bg-white rounded-lg border">
              <div class="w-2 h-2 bg-green-500 rounded-full mr-3"></div>
              <span>Read TEMPLATE_SETUP.md</span>
            </div>
            <div class="flex items-center p-3 bg-white rounded-lg border">
              <div class="w-2 h-2 bg-green-500 rounded-full mr-3"></div>
              <span>Install dependencies</span>
            </div>
            <div class="flex items-center p-3 bg-white rounded-lg border">
              <div class="w-2 h-2 bg-green-500 rounded-full mr-3"></div>
              <span>Customize for your project</span>
            </div>
            <div class="flex items-center p-3 bg-white rounded-lg border">
              <div class="w-2 h-2 bg-green-500 rounded-full mr-3"></div>
              <span>Deploy your website</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Support & Community -->
    <div class="max-w-4xl mx-auto mb-16">
      <h2 class="text-3xl font-bold text-center text-foreground mb-12">
        Need Help? We've Got You Covered
      </h2>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Documentation -->
        <div class="text-center p-6 bg-secondary/20 rounded-lg">
          <div class="inline-flex items-center justify-center w-16 h-16 bg-blue-100 rounded-full mb-4">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-foreground mb-2">Documentation</h3>
          <p class="text-muted-foreground mb-4">Comprehensive guides and examples</p>
          <Button variant="outline" size="sm">View Docs</Button>
        </div>

        <!-- Community -->
        <div class="text-center p-6 bg-secondary/20 rounded-lg">
          <div class="inline-flex items-center justify-center w-16 h-16 bg-green-100 rounded-full mb-4">
            <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-foreground mb-2">Community</h3>
          <p class="text-muted-foreground mb-4">Connect with other developers</p>
          <Button variant="outline" size="sm">Join Discord</Button>
        </div>

        <!-- Support -->
        <div class="text-center p-6 bg-secondary/20 rounded-lg">
          <div class="inline-flex items-center justify-center w-16 h-16 bg-purple-100 rounded-full mb-4">
            <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M12 2.25a9.75 9.75 0 100 19.5 9.75 9.75 0 000-19.5z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-foreground mb-2">Support</h3>
          <p class="text-muted-foreground mb-4">Get help when you need it</p>
          <Button variant="outline" size="sm">Contact Support</Button>
        </div>
      </div>
    </div>

    <!-- Next Steps CTA -->
    <div class="text-center bg-gradient-to-r from-primary/10 to-secondary/10 rounded-lg p-12">
      <h2 class="text-3xl font-bold text-foreground mb-4">
        Ready to Build Something Amazing?
      </h2>
      <p class="text-xl text-muted-foreground mb-8 max-w-2xl mx-auto">
        Your template is ready to use. Start customizing and create the website of your dreams!
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button size="lg" className="text-lg px-8 py-6">
          Start Building
        </Button>
        <Button variant="outline" size="lg" className="text-lg px-8 py-6">
          View Examples
        </Button>
      </div>
    </div>

    <!-- Footer Note -->
    <div class="text-center mt-16 text-muted-foreground">
      <p class="mb-2">
        Questions? Email us at <a href="mailto:support@yourdomain.com" class="text-primary hover:underline">support@yourdomain.com</a>
      </p>
      <p class="text-sm">
        Thank you for choosing Junkerri Astro Template! ðŸš€
      </p>
    </div>
  </div>
</BaseLayout>
